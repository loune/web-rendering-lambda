{
  "name": "web-rendering-lambda",
  "version": "3.0.0",
  "description": "Serverless Lambda for rendering webpages to PNG, JPEG and PDF.",
  "repository": "https://github.com/loune/web-rendering-lambda.git",
  "author": "Loune Lam",
  "license": "MIT",
  "engines": {
    "node": ">=10.15"
  },
  "scripts": {
    "package": "yarn package-without-chrome",
    "package-with-chrome": "yarn package-prepare && tar -xzf headless-chromium.tar.gz -C dist && cd dist && ../node_modules/.bin/bestzip ../package.zip .",
    "package-without-chrome": "yarn package-prepare && cd dist && rm -f ../package.zip && ../node_modules/.bin/bestzip ../package.zip .",
    "package-prepare": "yarn compile-production && yarn package-fonts && cp -r package.json yarn.lock dist && cd dist && PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=1 yarn install --production",
    "package-fonts": "if [ -e fonts ]; then cp -a fonts dist ; fi",
    "compile-production": "rm -rf dist && mkdir dist && ./node_modules/.bin/babel src --extensions .ts,.js --out-dir dist",
    "compile-debug": "rm -rf dist && mkdir dist && ./node_modules/.bin/babel src --extensions .ts,.js --out-dir dist --source-maps",
    "docker-build": "docker build -t web-rendering-lambda .",
    "docker-run": "docker run -p 8008:8008 -it web-rendering-lambda",
    "start": "yarn compile-debug && node dist/localserver.js",
    "start-prod": "node dist/localserver.js",
    "debug": "node --inspect-brk dist/localserver.js",
    "debug-with-compile": "yarn compile-debug && node --inspect-brk dist/localserver.js",
    "watch": "yarn nodemon -e ts -w ./src -x yarn start",
    "watch-debug": "yarn nodemon -e ts -w ./src -x yarn debug-with-compile",
    "lint": "./node_modules/.bin/tsc --noEmit && eslint --ext .js,.ts src",
    "lint:fix": "eslint --ext .js,.ts src --fix",
    "test": "yarn lint && yarn jest --coverage"
  },
  "dependencies": {
    "archiver": "^3.1.1",
    "base64-stream": "^1.0.0",
    "chrome-aws-lambda": "^2.1.1",
    "puppeteer": "^2.1.1",
    "tar": "^5.0.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-typescript": "^7.9.0",
    "@types/aws-lambda": "^8.10.47",
    "@types/jest": "^25.2.1",
    "@types/node": "^10.12.0",
    "@types/puppeteer": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "aws-sdk": "^2.653.0",
    "bestzip": "^2.1.5",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.6.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "jest": "^25.5.1",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "serverless-apigw-binary": "^0.4.4",
    "serverless-hooks-plugin": "^1.1.0",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3",
    "unzip-stream": "^0.3.0"
  }
}
