{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "dom"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "noEmit": true,
    "pretty": true,
    "incremental": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["src"]
}
